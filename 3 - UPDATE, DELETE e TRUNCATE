UPDATE 
( Mudar nome da tabela na coluna NOME)

UPDATE cursos 
SET nome = 'HTML5'
WHERE idcurso = '1';

UPDATE cursos 
set nome= 'Java', carga ='40', ano= '2015' 
where idcurso='5';
