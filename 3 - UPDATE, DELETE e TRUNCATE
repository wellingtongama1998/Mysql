UPDATE

UPDATE cursos
SET ano = '2020', carga ='800' (CONFIGURE)
WHERE ano = '2018'; (ONDE)


UPDATE cursos 
set ano= '2018', carga= '0'
WHERE ano = '2050'
LIMIT 1;  (APENAS EM 1 TABELA)
----------------------------------------------
DELETE

DELETE FROM cursos
WHERE id='2050';
